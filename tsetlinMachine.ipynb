                    sigma_e = initial_stddev * np.exp(-decay_rate * epoch)
           
                    p_1 = (self.s - 1) / self.s + np.random.normal(0, sigma_e)
                    p_2 = 1 / self.s + np.random.normal(0, sigma_e)

                    if self.clause_output[j] == 0:
                    
                        for k in range(self.number_of_features):
                            if X[k] == 1:
                                if p_1 > p_2:
